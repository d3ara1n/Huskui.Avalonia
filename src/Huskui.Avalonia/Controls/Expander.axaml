<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia">
    <Design.PreviewWith>
        <Panel>
            <StackPanel
                MinWidth="256"
                Margin="24"
                Spacing="12">
                <Expander>
                    <Expander.Header>
                        <TextBlock Text="Hello World" />
                    </Expander.Header>
                    <TextBlock Text="Bye World" />
                </Expander>
                <Expander ExpandDirection="Up">
                    <Expander.Header>
                        <TextBlock Text="Hello World" />
                    </Expander.Header>
                    <TextBlock Text="Bye World" />
                </Expander>
                <StackPanel
                    Height="128"
                    Margin="24"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Expander ExpandDirection="Left">
                        <Expander.Header>
                            <LayoutTransformControl
                                LayoutTransform="rotate(90deg)"
                                UseRenderTransform="False">
                                <TextBlock Text="Hello World" />
                            </LayoutTransformControl>
                        </Expander.Header>
                        <TextBlock Text="Bye World" />
                    </Expander>
                    <Expander ExpandDirection="Right">
                        <Expander.Header>
                            <LayoutTransformControl
                                LayoutTransform="rotate(270deg)"
                                UseRenderTransform="False">
                                <TextBlock Text="Hello World" />
                            </LayoutTransformControl>
                        </Expander.Header>
                        <TextBlock Text="Bye World" />
                    </Expander>
                </StackPanel>
            </StackPanel>
        </Panel>
    </Design.PreviewWith>

    <ControlTheme
        x:Key="ExpanderHeaderToggleButtonTheme"
        TargetType="ToggleButton">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="{StaticResource ControlInteractiveBackgroundBrush}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <ContentPresenter
                        Padding="{TemplateBinding Padding}"
                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        CornerRadius="{TemplateBinding CornerRadius}" />
                    <Border
                        x:Name="Indicator"
                        Background="{StaticResource TransparentBrush}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Border.Transitions>
                            <Transitions>
                                <BrushTransition
                                    Easing="SineEaseOut"
                                    Property="Background"
                                    Duration="{StaticResource ControlFasterAnimationDuration}" />
                            </Transitions>
                        </Border.Transitions>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>

        <Style Selector="^:pointerover /template/ Border#Indicator">
            <Setter Property="Background" Value="{StaticResource OverlayHalfBackgroundBrush}" />
        </Style>
        <Style Selector="^:pressed /template/ Border#Indicator">
            <Setter Property="Background" Value="{StaticResource OverlayFullBackgroundBrush}" />
        </Style>
    </ControlTheme>

    <Thickness x:Key="ExpanderHeaderMargin">12,8</Thickness>
    <Thickness x:Key="ExpanderContentMargin">12</Thickness>

    <ControlTheme
        x:Key="{x:Type Expander}"
        TargetType="Expander">
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="{StaticResource ExpanderContentMargin}" />
        <Setter Property="Background" Value="{StaticResource ControlInteractiveBackgroundBrush}" />
        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel>
                    <ToggleButton
                        Name="Toggle"
                        Padding="{StaticResource ExpanderHeaderMargin}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        IsChecked="{TemplateBinding IsExpanded,
                                                    Mode=TwoWay}"
                        Theme="{StaticResource ExpanderHeaderToggleButtonTheme}">
                        <DockPanel
                            HorizontalSpacing="12"
                            VerticalSpacing="12">
                            <Border
                                Name="SymbolBorder"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <fi:SymbolIcon
                                    Name="Symbol"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="{TemplateBinding FontSize}"
                                    Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                            </Border>
                            <ContentPresenter
                                Content="{TemplateBinding Header}"
                                ContentTemplate="{TemplateBinding HeaderTemplate}" />
                        </DockPanel>
                    </ToggleButton>
                    <ContentPresenter
                        Name="PART_ContentPresenter"
                        Padding="{TemplateBinding Padding}"
                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                        IsVisible="{TemplateBinding IsExpanded}"
                        Background="{StaticResource ControlTranslucentHalfBackgroundBrush}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        CornerRadius="{TemplateBinding CornerRadius}" />
                </DockPanel>
            </ControlTemplate>
        </Setter>


        <Style Selector="^ /template/ fi|SymbolIcon#Symbol">
            <Setter Property="Symbol" Value="Add" />
        </Style>

        <Style Selector="^:expanded /template/ fi|SymbolIcon#Symbol">
            <Setter Property="Symbol" Value="Subtract" />
        </Style>

        <Style Selector="^:up">
            <Style Selector="^ /template/ ToggleButton#Toggle">
                <Setter Property="DockPanel.Dock" Value="Bottom" />
            </Style>
            <Style Selector="^ /template/ Border#SymbolBorder">
                <Setter Property="DockPanel.Dock" Value="Right" />
            </Style>
            <Style Selector="^:expanded">
                <Style Selector="^ /template/ ToggleButton#Toggle">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:CornerRadiusConverters.Lower}}" />
                    <Setter Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:ThicknessConverters.WithoutTop}}" />
                </Style>
                <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:CornerRadiusConverters.Upper}}" />
                    <Setter Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:ThicknessConverters.WithoutBottom}}" />
                </Style>
            </Style>
        </Style>

        <Style Selector="^:down">
            <Style Selector="^ /template/ ToggleButton#Toggle">
                <Setter Property="DockPanel.Dock" Value="Top" />
            </Style>
            <Style Selector="^ /template/ Border#SymbolBorder">
                <Setter Property="DockPanel.Dock" Value="Right" />
            </Style>
            <Style Selector="^:expanded">
                <Style Selector="^ /template/ ToggleButton#Toggle">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:CornerRadiusConverters.Upper}}" />
                    <Setter Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:ThicknessConverters.WithoutBottom}}" />
                </Style>
                <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:CornerRadiusConverters.Lower}}" />
                    <Setter Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:ThicknessConverters.WithoutTop}}" />
                </Style>
            </Style>
        </Style>

        <Style Selector="^:right">
            <Style Selector="^ /template/ ToggleButton#Toggle">
                <Setter Property="DockPanel.Dock" Value="Left" />
            </Style>
            <Style Selector="^ /template/ Border#SymbolBorder">
                <Setter Property="DockPanel.Dock" Value="Top" />
            </Style>
            <Style Selector="^:expanded">
                <Style Selector="^ /template/ ToggleButton#Toggle">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:CornerRadiusConverters.Left}}" />
                    <Setter Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:ThicknessConverters.WithoutRight}}" />
                </Style>
                <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:CornerRadiusConverters.Right}}" />
                    <Setter Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:ThicknessConverters.WithoutLeft}}" />
                </Style>
            </Style>
        </Style>
        <Style Selector="^:left">
            <Style Selector="^ /template/ ToggleButton#Toggle">
                <Setter Property="DockPanel.Dock" Value="Right" />
            </Style>
            <Style Selector="^ /template/ Border#SymbolBorder">
                <Setter Property="DockPanel.Dock" Value="Bottom" />
            </Style>
            <Style Selector="^:expanded">
                <Style Selector="^ /template/ ToggleButton#Toggle">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:CornerRadiusConverters.Right}}" />
                    <Setter Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:ThicknessConverters.WithoutLeft}}" />
                </Style>
                <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:CornerRadiusConverters.Left}}" />
                    <Setter Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static husk:ThicknessConverters.WithoutRight}}" />
                </Style>
            </Style>
        </Style>
    </ControlTheme>
</ResourceDictionary>
