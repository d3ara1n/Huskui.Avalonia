<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:gallery="clr-namespace:Huskui.Gallery"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:viewModels="clr-namespace:Huskui.Gallery.ViewModels">
    <ControlTheme
        x:Key="{x:Type controls:ControlPage}"
        TargetType="controls:ControlPage">
        <Setter Property="Template">
            <ControlTemplate>
                <ScrollViewer>
                    <DockPanel
                        MinWidth="800"
                        Margin="48"
                        HorizontalAlignment="Center"
                        VerticalSpacing="32">
                        <!--  Page Header  -->
                        <StackPanel
                            DockPanel.Dock="Top"
                            Spacing="8">
                            <TextBlock
                                FontSize="28"
                                FontWeight="{StaticResource ControlStrongFontWeight}"
                                Text="{Binding $parent[gallery:MainWindow].((viewModels:MainWindowViewModel)DataContext).SelectedItem.Title, FallbackValue={x:Null}}" />
                            <TextBlock
                                FontSize="{StaticResource LargeFontSize}"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="{Binding $parent[gallery:MainWindow].((viewModels:MainWindowViewModel)DataContext).SelectedItem.Description, FallbackValue={x:Null}}" />
                            <ItemsControl ItemsSource="{Binding $parent[gallery:MainWindow].((viewModels:MainWindowViewModel)DataContext).SelectedItem.Tags, FallbackValue={x:Null}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel
                                            ItemSpacing="6"
                                            LineSpacing="6"
                                            Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <husk:Tag Content="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        <ContentPresenter
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </DockPanel>
                </ScrollViewer>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
