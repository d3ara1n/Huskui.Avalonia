<husk:Toast
    x:Class="Huskui.Gallery.Toasts.BlogPreviewToast"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="900"
    Header="Understanding Modern UI Design Patterns"
    IsHeaderVisible="True"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel
            Margin="24"
            Spacing="20">

            <!--  Article Metadata  -->
            <StackPanel
                Orientation="Horizontal"
                Spacing="16">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="By Sarah Chen" />
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="•" />
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="8 min read" />
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="•" />
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Published 2 days ago" />
            </StackPanel>

            <!--  Featured Image  -->
            <Border
                Height="200"
                Background="{DynamicResource AccentFillColorDefaultBrush}"
                CornerRadius="8">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Foreground="White"
                    Text="🎨 Featured Image" />
            </Border>

            <!--  Article Content  -->
            <StackPanel Spacing="16">

                <TextBlock
                    FontSize="16"
                    LineHeight="24"
                    TextWrapping="Wrap">
                    <Run Text="In the rapidly evolving world of software development, user interface design patterns have become the cornerstone of creating intuitive and engaging applications. This comprehensive guide explores the fundamental principles that drive modern UI design and how they can be effectively implemented in today's applications." />
                </TextBlock>

                <TextBlock
                    Margin="0,8,0,0"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="The Evolution of UI Design" />

                <TextBlock
                    FontSize="16"
                    LineHeight="24"
                    TextWrapping="Wrap">
                    <Run Text="User interface design has undergone a remarkable transformation over the past decade. From skeuomorphic designs that mimicked real-world objects to the clean, minimalist approaches we see today, the journey has been driven by user needs and technological capabilities." />
                </TextBlock>

                <husk:Card
                    Margin="0,8"
                    Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="💡 Key Insight" />
                        <TextBlock
                            FontStyle="Italic"
                            Text="Modern UI design is not just about aesthetics—it's about creating meaningful interactions that guide users naturally through their tasks."
                            TextWrapping="Wrap" />
                    </StackPanel>
                </husk:Card>

                <TextBlock
                    Margin="0,16,0,0"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Core Design Principles" />

                <StackPanel Spacing="12">
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="8">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="1." />
                        <TextBlock
                            Text="Consistency: Maintain uniform patterns across all interface elements"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="8">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="2." />
                        <TextBlock
                            Text="Clarity: Ensure every element has a clear purpose and meaning"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="8">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="3." />
                        <TextBlock
                            Text="Feedback: Provide immediate responses to user actions"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="8">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="4." />
                        <TextBlock
                            Text="Accessibility: Design for users of all abilities and contexts"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>

                <TextBlock
                    Margin="0,16,0,0"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Implementation Strategies" />

                <TextBlock
                    FontSize="16"
                    LineHeight="24"
                    TextWrapping="Wrap">
                    <Run Text="Implementing these design principles requires a systematic approach. Start with user research to understand your audience's needs, then create wireframes and prototypes to test your concepts before moving to final implementation." />
                </TextBlock>

                <Border
                    Margin="0,8"
                    Padding="16"
                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="📚 Recommended Reading" />
                        <TextBlock Text="• Don Norman - The Design of Everyday Things" />
                        <TextBlock Text="• Steve Krug - Don't Make Me Think" />
                        <TextBlock Text="• Alan Cooper - About Face: The Essentials of Interaction Design" />
                    </StackPanel>
                </Border>

                <TextBlock
                    Margin="0,16,0,0"
                    FontSize="16"
                    LineHeight="24"
                    TextWrapping="Wrap">
                    <Run Text="As we continue to push the boundaries of what's possible in user interface design, remember that the best interfaces are often invisible—they allow users to accomplish their goals without friction or confusion." />
                </TextBlock>

            </StackPanel>

            <!--  Action Buttons  -->
            <StackPanel
                Margin="0,24,0,0"
                Spacing="16">
                <husk:Divider />
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="16">
                        <Button
                            Classes="Subtle"
                            Content="👍 Like (42)" />
                        <Button
                            Classes="Subtle"
                            Content="💬 Comment (8)" />
                        <Button
                            Classes="Subtle"
                            Content="🔖 Bookmark" />
                    </StackPanel>

                    <Button
                        Classes="Accent"
                        Grid.Column="1"
                        Click="OnReadFullClick"
                        Content="Read Full Article" />
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</husk:Toast>
