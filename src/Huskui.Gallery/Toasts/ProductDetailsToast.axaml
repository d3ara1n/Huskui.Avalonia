<husk:Toast
    x:Class="Huskui.Gallery.Toasts.ProductDetailsToast"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="900"
    Header="Premium Wireless Headphones"
    IsHeaderVisible="True"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid
            Margin="24"
            ColumnDefinitions="300,*"
            ColumnSpacing="24">

            <!--  Product Images  -->
            <StackPanel
                Grid.Column="0"
                Spacing="16">

                <!--  Main Image  -->
                <Border
                    Height="250"
                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="8">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="80"
                        Text="🎧" />
                </Border>

                <!--  Thumbnail Images  -->
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="8">
                    <Border
                        Width="60"
                        Height="60"
                        Background="{DynamicResource AccentFillColorDefaultBrush}"
                        CornerRadius="4">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Foreground="White"
                            Text="🎧" />
                    </Border>
                    <Border
                        Width="60"
                        Height="60"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="4">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="🎧" />
                    </Border>
                    <Border
                        Width="60"
                        Height="60"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="4">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="🎧" />
                    </Border>
                    <Border
                        Width="60"
                        Height="60"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="4">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="🎧" />
                    </Border>
                </StackPanel>

            </StackPanel>

            <!--  Product Details  -->
            <StackPanel
                Grid.Column="1"
                Spacing="20">

                <!--  Price and Rating  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                        Text="$299.99" />

                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="8">
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="2">
                            <TextBlock
                                FontSize="16"
                                Text="⭐⭐⭐⭐⭐" />
                        </StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="4.8/5" />
                        <TextBlock
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="(2,847 reviews)" />
                    </StackPanel>
                </StackPanel>

                <!--  Key Features  -->
                <husk:Card Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Key Features" />
                        <StackPanel Spacing="8">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock
                                    FontSize="16"
                                    Text="🔇" />
                                <TextBlock Text="Active Noise Cancellation" />
                            </StackPanel>
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock
                                    FontSize="16"
                                    Text="🔋" />
                                <TextBlock Text="30-hour battery life" />
                            </StackPanel>
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock
                                    FontSize="16"
                                    Text="🎵" />
                                <TextBlock Text="Hi-Res Audio certified" />
                            </StackPanel>
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock
                                    FontSize="16"
                                    Text="⚡" />
                                <TextBlock Text="Quick charge: 5 min = 2 hours" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </husk:Card>

                <!--  Color Options  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="SemiBold"
                        Text="Color" />
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="8">
                        <Border
                            Width="32"
                            Height="32"
                            Background="Black"
                            BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="16" />
                        <Border
                            Width="32"
                            Height="32"
                            Background="White"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="16" />
                        <Border
                            Width="32"
                            Height="32"
                            Background="Silver"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="16" />
                    </StackPanel>
                </StackPanel>

                <!--  Specifications  -->
                <husk:Card Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Specifications" />
                        <Grid
                            ColumnDefinitions="Auto,*"
                            RowDefinitions="Auto,Auto,Auto,Auto"
                            RowSpacing="8">
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                FontWeight="Medium"
                                Text="Driver:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Text="40mm dynamic" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                FontWeight="Medium"
                                Text="Frequency:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Text="20Hz-40kHz" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                FontWeight="Medium"
                                Text="Bluetooth:" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Text="5.0" />

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                FontWeight="Medium"
                                Text="Weight:" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Text="250g" />
                        </Grid>
                    </StackPanel>
                </husk:Card>

                <!--  Quantity and Add to Cart  -->
                <StackPanel Spacing="12">
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="12">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Medium"
                            Text="Quantity:" />
                        <Border
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Classes="Subtle"
                                    Width="32"
                                    Height="32"
                                    Content="−" />
                                <TextBlock
                                    Width="40"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="1" />
                                <Button
                                    Classes="Subtle"
                                    Width="32"
                                    Height="32"
                                    Content="+" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="12">
                        <Button
                            Classes="Accent"
                            Width="150"
                            Click="OnAddToCartClick"
                            Content="Add to Cart" />
                        <Button
                            Width="120"
                            Click="OnBuyNowClick"
                            Content="Buy Now" />
                        <Button
                            Classes="Subtle"
                            Width="40"
                            Content="♡" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>

        </Grid>
    </ScrollViewer>

</husk:Toast>
