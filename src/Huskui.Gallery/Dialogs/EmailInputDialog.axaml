<husk:Dialog
    x:Class="Huskui.Gallery.Dialogs.EmailInputDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Enter Email Address"
    d:DesignHeight="250"
    d:DesignWidth="400"
    IsPrimaryButtonVisible="True"
    PrimaryText="Confirm"
    SecondaryText="Cancel"
    mc:Ignorable="d">

    <StackPanel
        Width="350"
        Spacing="16">

        <!--  Input Section  -->
        <StackPanel Spacing="8">
            <TextBlock
                FontWeight="Medium"
                Text="Please enter your email address:" />

            <TextBox
                x:Name="EmailTextBox"
                KeyDown="OnEmailTextBoxKeyDown"
                Text="{Binding Result, RelativeSource={RelativeSource AncestorType=husk:Dialog}}"
                Watermark="example@domain.com" />
        </StackPanel>

        <!--  Validation Message  -->
        <husk:InfoBar
            x:Name="ValidationBorder"
            Classes="Danger"
            IsVisible="False">
            <TextBlock
                x:Name="ValidationText"
                FontSize="12"
                Text="Please enter a valid email address" />
        </husk:InfoBar>

        <!--  Info Section  -->
        <StackPanel Spacing="8">
            <TextBlock
                FontSize="12"
                FontWeight="Medium"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="Email format examples:" />
            <StackPanel Spacing="4">
                <TextBlock
                    FontSize="11"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="• user@example.com" />
                <TextBlock
                    FontSize="11"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="• name.surname@company.org" />
            </StackPanel>
        </StackPanel>

    </StackPanel>

</husk:Dialog>
