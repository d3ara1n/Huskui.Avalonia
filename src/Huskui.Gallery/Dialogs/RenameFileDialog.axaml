<husk:Dialog
    x:Class="Huskui.Gallery.Dialogs.RenameFileDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Rename File"
    d:DesignHeight="350"
    d:DesignWidth="500"
    IsPrimaryButtonVisible="True"
    PrimaryText="Rename"
    SecondaryText="Cancel"
    mc:Ignorable="d">

    <StackPanel
        Width="400"
        Margin="24"
        Spacing="20">

        <!--  Header  -->
        <StackPanel
            HorizontalAlignment="Center"
            Spacing="12">
            <Border
                Width="48"
                Height="48"
                HorizontalAlignment="Center"
                Background="{DynamicResource AccentFillColorDefaultBrush}"
                CornerRadius="24">
                <fi:SymbolIcon
                    FontSize="24"
                    Symbol="Rename" />
            </Border>

            <TextBlock
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Enter a new name for the file"
                TextAlignment="Center" />
        </StackPanel>

        <!--  Current File Info  -->
        <husk:Card Padding="16">
            <StackPanel Spacing="12">
                <TextBlock
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Current file:" />

                <StackPanel
                    Orientation="Horizontal"
                    Spacing="12">
                    <fi:SymbolIcon
                        FontSize="24"
                        Symbol="Document" />
                    <StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="document.pdf" />
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="8">
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="2.4 MB" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="•" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="PDF Document" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </husk:Card>

        <!--  New Name Input  -->
        <StackPanel Spacing="8">
            <TextBlock
                FontWeight="Medium"
                Text="New name:" />

            <TextBox
                x:Name="FileNameTextBox"
                Text="document"
                Watermark="Enter new filename" />

            <StackPanel
                Orientation="Horizontal"
                Spacing="8">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Extension:" />
                <ComboBox
                    Width="100"
                    SelectedIndex="0">
                    <ComboBoxItem Content=".pdf" />
                    <ComboBoxItem Content=".doc" />
                    <ComboBoxItem Content=".docx" />
                    <ComboBoxItem Content=".txt" />
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!--  Preview  -->
        <husk:Card
            Padding="16"
            Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}">
            <StackPanel Spacing="8">
                <TextBlock
                    FontSize="12"
                    FontWeight="Medium"
                    Text="Preview:" />
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="8">
                    <fi:SymbolIcon
                        FontSize="16"
                        Symbol="Document" />
                    <TextBlock
                        x:Name="PreviewText"
                        FontWeight="SemiBold"
                        Text="document.pdf" />
                </StackPanel>
            </StackPanel>
        </husk:Card>

        <!--  Validation Messages  -->
        <Border
            x:Name="ValidationBorder"
            Padding="12"
            IsVisible="False"
            Background="#FFF3E0"
            BorderBrush="#FF9800"
            BorderThickness="1"
            CornerRadius="6">
            <StackPanel
                Orientation="Horizontal"
                Spacing="8">
                <fi:SymbolIcon
                    FontSize="16"
                    Foreground="#FF9800"
                    Symbol="Info" />
                <TextBlock
                    x:Name="ValidationText"
                    FontSize="12"
                    Foreground="#E65100"
                    Text="A file with this name already exists. Choose a different name."
                    TextWrapping="Wrap" />
            </StackPanel>
        </Border>

        <!--  Options  -->
        <StackPanel Spacing="8">
            <CheckBox
                Content="Keep original file creation date"
                IsChecked="True" />
            <CheckBox
                Content="Update file in recent documents"
                IsChecked="True" />
        </StackPanel>

    </StackPanel>

</husk:Dialog>
