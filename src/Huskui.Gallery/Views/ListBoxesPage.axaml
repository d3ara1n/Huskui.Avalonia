<controls:ControlPage
    x:Class="Huskui.Gallery.Views.ListBoxesPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Spacing="32">

        <controls:ExampleContainer
            Title="Basic ListBoxes"
            Description="Standard listbox controls with different configurations">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Selection Controls" />
                    <Button
                        Click="OnClearSelectionClick"
                        Content="Clear Selection" />
                    <Button
                        Click="OnResetSelectionClick"
                        Content="Reset to Defaults" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="Clear all selections or reset to default values."
                        TextWrapping="Wrap" />
                </StackPanel>
            </controls:ExampleContainer.Controls>

            <StackPanel Spacing="16">
                <ListBox
                    x:Name="BasicListBox"
                    Width="200"
                    Height="200"
                    BorderBrush="Black"
                    BorderThickness="1">
                    <ListBoxItem>Item 1</ListBoxItem>
                    <ListBoxItem>Item 2</ListBoxItem>
                    <ListBoxItem>Item 3</ListBoxItem>
                    <ListBoxItem>Item 4</ListBoxItem>
                </ListBox>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="MultiSelect ListBoxes"
            Description="Listboxes with multi-select enabled">
            <StackPanel Spacing="16">
                <ListBox
                    x:Name="MultiSelectListBox"
                    Width="200"
                    Height="200"
                    BorderBrush="Black"
                    BorderThickness="1"
                    SelectionMode="Multiple">
                    <ListBoxItem>Item 1</ListBoxItem>
                    <ListBoxItem>Item 2</ListBoxItem>
                    <ListBoxItem>Item 3</ListBoxItem>
                    <ListBoxItem>Item 4</ListBoxItem>
                </ListBox>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Custom ListBoxes"
            Description="Listboxes with custom item templates">
            <StackPanel Spacing="16">
                <ListBox
                    x:Name="CustomListBox"
                    Width="200"
                    Height="200"
                    BorderBrush="Black"
                    BorderThickness="1">
                    <ListBoxItem>
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="8">
                            <TextBlock Text="Item 1" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Description 1" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="8">
                            <TextBlock Text="Item 2" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Description 2" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="8">
                            <TextBlock Text="Item 3" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Description 3" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </controls:ExampleContainer>

    </StackPanel>
</controls:ControlPage>
