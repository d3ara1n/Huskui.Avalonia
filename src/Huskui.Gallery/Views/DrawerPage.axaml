<controls:ControlPage
    x:Class="Huskui.Gallery.Views.DrawerPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel
        Margin="20"
        Spacing="20">

        <controls:ExampleContainer
            Title="Drawers"
            Description="A floating drawer that can be dragged, resized, and collapsed">

            <StackPanel>
                <Button
                    Click="OpenDrawer_OnClick"
                    Content="Open New Drawer" />
            </StackPanel>
        </controls:ExampleContainer>
    </StackPanel>
</controls:ControlPage>
