<controls:ControlPage
    x:Class="Huskui.Gallery.Views.StepControlsPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Spacing="32">

        <controls:ExampleContainer
            Title="Basic StepControl"
            Description="A simple StepControl with different states">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Step Controls" />
                    <Button
                        Click="OnNextStepClick"
                        Content="Next Step" />
                    <Button
                        Click="OnPreviousStepClick"
                        Content="Previous Step" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="Navigate through steps to see different states."
                        TextWrapping="Wrap" />
                </StackPanel>
            </controls:ExampleContainer.Controls>
            <StackPanel Spacing="12">
                <husk:StepControl
                    Name="Control"
                    SelectedIndex="0">
                    <husk:StepItem Header="Step 1">
                        <TextBlock Text="Step 1" />
                    </husk:StepItem>
                    <husk:StepItem Header="Step 2">
                        <TextBlock Text="Step 2" />
                    </husk:StepItem>
                    <husk:StepItem Header="Step 3">
                        <TextBlock Text="Step 3" />
                    </husk:StepItem>
                </husk:StepControl>
                <TextBlock>
                    <Run Text="Selected Index: " />
                    <Run Text="{Binding #Control.SelectedIndex}" />
                </TextBlock>
                <husk:InfoBar Header="Tip">
                    <TextBlock>
                        <Run Text="Setting" />
                        <InlineUIContainer BaselineAlignment="TextBottom">
                            <husk:HighlightBlock Text="SelectedIndex" />
                        </InlineUIContainer>
                        <Run Text="to -1 will show all steps as completed." />
                    </TextBlock>
                </husk:InfoBar>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Minimal StepControl"
            Description="A minimal step indicator using dots">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Minimal Theme" />
                    <Button
                        Click="OnMinimalNextStepClick"
                        Content="Next Step" />
                    <Button
                        Click="OnMinimalPreviousStepClick"
                        Content="Previous Step" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="Simple dot indicators for progress visualization."
                        TextWrapping="Wrap" />
                </StackPanel>
            </controls:ExampleContainer.Controls>
            <StackPanel Spacing="12">
                <husk:StepControl
                    Name="MinimalControl"
                    SelectedIndex="0"
                    Theme="{StaticResource MinimalStepControlTheme}">
                    <husk:StepItem />
                    <husk:StepItem />
                    <husk:StepItem />
                    <husk:StepItem />
                    <husk:StepItem />
                </husk:StepControl>
                <TextBlock>
                    <Run Text="Selected Index: " />
                    <Run Text="{Binding #MinimalControl.SelectedIndex}" />
                </TextBlock>
                <husk:InfoBar Header="Usage">
                    <TextBlock>
                        <Run Text="Apply" />
                        <InlineUIContainer BaselineAlignment="TextBottom">
                            <husk:HighlightBlock Text="Theme='{StaticResource MinimalStepControlTheme}'" />
                        </InlineUIContainer>
                        <Run Text="to use the minimal dot indicator style." />
                    </TextBlock>
                </husk:InfoBar>
            </StackPanel>
        </controls:ExampleContainer>

    </StackPanel>
</controls:ControlPage>
