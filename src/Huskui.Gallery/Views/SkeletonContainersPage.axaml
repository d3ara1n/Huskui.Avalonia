<controls:ControlPage
    x:Class="Huskui.Gallery.Views.SkeletonContainersPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Spacing="32">

        <controls:ExampleContainer
            Title="Basic Skeleton Loading"
            Description="Skeleton placeholder for content loading">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Skeleton Controls" />
                    <ToggleButton
                        x:Name="LoadingToggle"
                        Content="Loading State"
                        IsChecked="True" />
                    <ToggleButton
                        x:Name="AnimatedToggle"
                        Content="Animation"
                        IsChecked="True" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="Toggle loading state to show/hide skeleton placeholders and animation effects."
                        TextWrapping="Wrap" />
                </StackPanel>
            </controls:ExampleContainer.Controls>

            <husk:SkeletonContainer
                Width="400"
                IsAnimated="{Binding #AnimatedToggle.IsChecked}"
                IsLoading="{Binding #LoadingToggle.IsChecked}">
                <husk:Card Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Text="User Profile" />
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="12">
                            <Ellipse
                                Width="60"
                                Height="60"
                                Fill="{StaticResource ControlAccentBackgroundBrush}" />
                            <StackPanel Spacing="8">
                                <TextBlock
                                    FontWeight="Bold"
                                    Text="John Doe" />
                                <TextBlock Text="Software Developer" />
                                <TextBlock Text="john.doe@example.com" />
                            </StackPanel>
                        </StackPanel>
                        <TextBlock
                            Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                            TextWrapping="Wrap" />
                    </StackPanel>
                </husk:Card>
            </husk:SkeletonContainer>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="List Skeleton"
            Description="Skeleton for list items">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="List Skeleton Controls" />
                    <ToggleButton
                        x:Name="ListLoadingToggle"
                        Content="Loading"
                        IsChecked="True" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="Toggle loading state to show/hide skeleton placeholders."
                        TextWrapping="Wrap" />
                </StackPanel>
            </controls:ExampleContainer.Controls>

            <husk:SkeletonContainer
                Width="500"
                IsAnimated="True"
                IsLoading="{Binding #ListLoadingToggle.IsChecked}">
                <StackPanel Spacing="12">
                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Recent Articles" />

                    <!--  Article 1  -->
                    <husk:Card Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontWeight="Bold"
                                Text="Getting Started with Avalonia UI" />
                            <TextBlock Text="Learn the basics of building cross-platform applications with Avalonia UI framework." />
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="16">
                                <TextBlock
                                    FontSize="12"
                                    Text="Published: 2024-01-15" />
                                <TextBlock
                                    FontSize="12"
                                    Text="Author: Jane Smith" />
                            </StackPanel>
                        </StackPanel>
                    </husk:Card>

                    <!--  Article 2  -->
                    <husk:Card Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontWeight="Bold"
                                Text="Advanced MVVM Patterns" />
                            <TextBlock Text="Explore advanced Model-View-ViewModel patterns for complex applications." />
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="16">
                                <TextBlock
                                    FontSize="12"
                                    Text="Published: 2024-01-10" />
                                <TextBlock
                                    FontSize="12"
                                    Text="Author: Bob Johnson" />
                            </StackPanel>
                        </StackPanel>
                    </husk:Card>

                    <!--  Article 3  -->
                    <husk:Card Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontWeight="Bold"
                                Text="Custom Control Development" />
                            <TextBlock Text="Create your own custom controls with proper styling and theming support." />
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="16">
                                <TextBlock
                                    FontSize="12"
                                    Text="Published: 2024-01-05" />
                                <TextBlock
                                    FontSize="12"
                                    Text="Author: Alice Brown" />
                            </StackPanel>
                        </StackPanel>
                    </husk:Card>
                </StackPanel>
            </husk:SkeletonContainer>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Form Skeleton"
            Description="Skeleton for form layouts">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Form Skeleton Controls" />
                    <ToggleButton
                        x:Name="FormLoadingToggle"
                        Content="Loading"
                        IsChecked="True" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="Toggle loading state to show/hide skeleton placeholders."
                        TextWrapping="Wrap" />
                </StackPanel>
            </controls:ExampleContainer.Controls>

            <husk:SkeletonContainer
                Width="400"
                IsAnimated="True"
                IsLoading="{Binding #FormLoadingToggle.IsChecked}">
                <husk:Card Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Text="Contact Form" />

                        <StackPanel Spacing="8">
                            <TextBlock Text="Name" />
                            <TextBox Watermark="Enter your name" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Email" />
                            <TextBox Watermark="Enter your email" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Subject" />
                            <ComboBox>
                                <ComboBoxItem Content="General Inquiry" />
                                <ComboBoxItem Content="Support Request" />
                                <ComboBoxItem Content="Feedback" />
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Message" />
                            <TextBox
                                Height="80"
                                AcceptsReturn="True"
                                Watermark="Enter your message" />
                        </StackPanel>

                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="12">
                            <Button Content="Cancel" />
                            <Button
                                Classes="Primary"
                                Content="Send Message" />
                        </StackPanel>
                    </StackPanel>
                </husk:Card>
            </husk:SkeletonContainer>
        </controls:ExampleContainer>

    </StackPanel>
</controls:ControlPage>
