<controls:ControlPage
    x:Class="Huskui.Gallery.Views.InfoBarsPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia">
    <StackPanel Spacing="32">

        <controls:ExampleContainer
            Title="Basic Info Bars"
            Description="Info bars with different severity levels">
            <StackPanel Spacing="16">
                <husk:InfoBar
                    Content="This is an informational message."
                    Header="Information" />
                <husk:InfoBar
                    Classes="Success"
                    Content="Operation completed successfully."
                    Header="Success" />
                <husk:InfoBar
                    Classes="Warning"
                    Content="Please review your settings."
                    Header="Warning" />
                <husk:InfoBar
                    Classes="Danger"
                    Content="An error occurred during processing."
                    Header="Error" />
            </StackPanel>
        </controls:ExampleContainer>
    </StackPanel>

</controls:ControlPage>
