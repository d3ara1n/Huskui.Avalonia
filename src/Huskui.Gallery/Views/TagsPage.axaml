<controls:ControlPage
    x:Class="Huskui.Gallery.Views.TagsPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia">
    <StackPanel Spacing="32">

        <controls:ExampleContainer
            Title="Basic Tags"
            Description="Tags with different styles and colors">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Tag Styles" />
                    <ToggleButton
                        x:Name="SmallSizeToggle"
                        Content="Small Size" />
                    <ToggleButton
                        x:Name="StatusStyleToggle"
                        Content="Status Style" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="Toggle different tag styles to see visual variations."
                        TextWrapping="Wrap" />
                </StackPanel>
            </controls:ExampleContainer.Controls>

            <StackPanel Spacing="16">
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="8">
                    <husk:Tag
                        Classes.Small="{Binding #SmallSizeToggle.IsChecked}"
                        Classes.Status="{Binding #StatusStyleToggle.IsChecked}"
                        Content="Default" />
                    <husk:Tag
                        Classes="Primary"
                        Classes.Small="{Binding #SmallSizeToggle.IsChecked}"
                        Classes.Status="{Binding #StatusStyleToggle.IsChecked}"
                        Content="Primary" />
                    <husk:Tag
                        Classes="Success"
                        Classes.Small="{Binding #SmallSizeToggle.IsChecked}"
                        Classes.Status="{Binding #StatusStyleToggle.IsChecked}"
                        Content="Success" />
                    <husk:Tag
                        Classes="Warning"
                        Classes.Small="{Binding #SmallSizeToggle.IsChecked}"
                        Classes.Status="{Binding #StatusStyleToggle.IsChecked}"
                        Content="Warning" />
                    <husk:Tag
                        Classes="Danger"
                        Classes.Small="{Binding #SmallSizeToggle.IsChecked}"
                        Classes.Status="{Binding #StatusStyleToggle.IsChecked}"
                        Content="Danger" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="Bold"
                        Text="Tag Collection Example" />
                    <WrapPanel>
                        <husk:Tag
                            Classes="Primary"
                            Margin="2"
                            Content="C#" />
                        <husk:Tag
                            Classes="Success"
                            Margin="2"
                            Content="Avalonia" />
                        <husk:Tag
                            Classes="Warning"
                            Margin="2"
                            Content="MVVM" />
                        <husk:Tag
                            Margin="2"
                            Content="Cross-platform" />
                        <husk:Tag
                            Classes="Primary"
                            Margin="2"
                            Content="Open Source" />
                        <husk:Tag
                            Classes="Success"
                            Margin="2"
                            Content="UI Framework" />
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </controls:ExampleContainer>
    </StackPanel>
</controls:ControlPage>
