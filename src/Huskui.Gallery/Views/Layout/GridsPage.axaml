<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
             x:Class="Huskui.Gallery.Views.Layout.GridsPage">

    <ScrollViewer Padding="48">
        <StackPanel Spacing="32" MaxWidth="1000">
            <StackPanel Spacing="8">
                <TextBlock Text="Grids"
                           FontSize="28"
                           FontWeight="{StaticResource ControlStrongFontWeight}" />
                <TextBlock Text="Grid layout examples and patterns"
                           FontSize="{StaticResource LargeFontSize}"
                           Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
            </StackPanel>

            <controls:ExampleContainer Title="Basic Grid"
                                       Description="Simple grid layout with columns and rows">
                <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                    <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource ControlAccentBackgroundBrush}"
                            Height="60" CornerRadius="4">
                        <TextBlock Text="1,1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{StaticResource ControlWhiteForegroundBrush}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource ControlAccentBackgroundBrush}"
                            Height="60" CornerRadius="4">
                        <TextBlock Text="1,2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{StaticResource ControlWhiteForegroundBrush}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="2" Background="{StaticResource ControlAccentBackgroundBrush}"
                            Height="60" CornerRadius="4">
                        <TextBlock Text="1,3" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{StaticResource ControlWhiteForegroundBrush}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                            Background="{StaticResource ControlTranslucentHalfBackgroundBrush}"
                            Height="40" CornerRadius="4">
                        <TextBlock Text="Spanning 3 columns" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </Grid>
            </controls:ExampleContainer>
        </StackPanel>
    </ScrollViewer>

</UserControl>
