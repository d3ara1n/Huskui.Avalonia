<controls:ControlPage xmlns="https://github.com/avaloniaui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
                      xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
                      mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
                      x:Class="Huskui.Gallery.Views.RatingControlsPage">
    <StackPanel Spacing="32">

        <controls:ExampleContainer Title="Basic Rating Control"
                                   Description="Standard rating controls with different values">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock Text="Current Value" FontWeight="Bold" FontSize="14" />
                    <TextBlock x:Name="BasicValueText" Text="3" FontSize="24" />
                    <Button Content="Reset" Click="OnResetBasicClick" />
                </StackPanel>
            </controls:ExampleContainer.Controls>

            <StackPanel Spacing="16" Width="300">
                <StackPanel Spacing="4">
                    <TextBlock Text="Interactive (click to rate)" FontWeight="Bold" />
                    <husk:RatingControl x:Name="BasicRating" Value="3" ValueChanged="OnBasicRatingChanged" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Value = 0 (unrated)" />
                    <husk:RatingControl Value="0" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Value = 5 (full)" />
                    <husk:RatingControl Value="5" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Minimum = 3, Maximum = 10" />
                    <husk:RatingControl Value="7" Minimum="3" Maximum="10" />
                </StackPanel>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Half Star Rating"
                                   Description="Rating controls that support half-star values">
            <controls:ExampleContainer.Controls>
                <StackPanel Spacing="12">
                    <TextBlock Text="Half Stars" FontWeight="Bold" FontSize="14" />
                    <TextBlock Text="Allow precise ratings like 3.5"
                               TextWrapping="Wrap"
                               FontSize="12"
                               Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                </StackPanel>
            </controls:ExampleContainer.Controls>

            <StackPanel Spacing="16" Width="300">
                <StackPanel Spacing="4">
                    <TextBlock Text="Value = 2.5" />
                    <husk:RatingControl Value="2.5" AllowHalfStars="True" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Value = 3.5" />
                    <husk:RatingControl Value="3.5" AllowHalfStars="True" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Value = 4.5" />
                    <husk:RatingControl Value="4.5" AllowHalfStars="True" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Interactive Half Stars" FontWeight="Bold" />
                    <husk:RatingControl x:Name="HalfStarRating" Value="0" AllowHalfStars="True" />
                    <TextBlock x:Name="HalfStarValueText" Text="Value: 0" FontSize="12"
                               Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                </StackPanel>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Read-Only and Disabled"
                                   Description="Display ratings without user interaction">
            <StackPanel Spacing="16" Width="400">
                <StackPanel Spacing="4">
                    <TextBlock Text="Read-Only (displays existing rating)" FontWeight="Bold" />
                    <husk:RatingControl Value="4" IsReadOnly="True" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Disabled" FontWeight="Bold" />
                    <husk:RatingControl Value="3" IsEnabled="False" />
                </StackPanel>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Custom Colors"
                                   Description="Rating controls with custom color schemes">
            <StackPanel Spacing="16" Width="400">
                <StackPanel Spacing="4">
                    <TextBlock Text="Default Yellow" FontWeight="Bold" />
                    <husk:RatingControl Value="4" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Red Hearts" FontWeight="Bold" />
                    <husk:RatingControl Value="4" FilledColor="#E53935" UnfilledIcon="Heart" FilledIcon="Heart" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Green" FontWeight="Bold" />
                    <husk:RatingControl Value="3" FilledColor="#43A047" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Blue" FontWeight="Bold" />
                    <husk:RatingControl Value="4" FilledColor="#1E88E5" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Purple" FontWeight="Bold" />
                    <husk:RatingControl Value="5" FilledColor="#8E24AA" />
                </StackPanel>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Size Variations"
                                   Description="Rating controls with different sizes">
            <StackPanel Spacing="16" Width="400">
                <StackPanel Spacing="4">
                    <TextBlock Text="Small (FontSize=14)" FontWeight="Bold" />
                    <husk:RatingControl Value="4" FontSize="14" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Medium (FontSize=20, default)" FontWeight="Bold" />
                    <husk:RatingControl Value="4" FontSize="20" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Large (FontSize=28)" FontWeight="Bold" />
                    <husk:RatingControl Value="4" FontSize="28" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Extra Large (FontSize=36)" FontWeight="Bold" />
                    <husk:RatingControl Value="4" FontSize="36" />
                </StackPanel>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Product Review Example"
                                   Description="Real-world usage in a product review card">
            <husk:Card Padding="24" Width="450">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <Border Width="80" Height="80" CornerRadius="8"
                                Background="{StaticResource ControlBackgroundBrush}">
                            <TextBlock Text="ðŸ“¦" FontSize="40"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <StackPanel Spacing="4">
                            <TextBlock Text="Awesome Product" FontSize="18" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <husk:RatingControl Value="4.5" AllowHalfStars="True" IsReadOnly="True" FontSize="16" />
                                <TextBlock Text="4.5" FontWeight="Bold" VerticalAlignment="Center" />
                                <TextBlock Text="(2,847 reviews)"
                                           Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Text="$29.99" FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource ControlAccentForegroundBrush}" />
                        </StackPanel>
                    </StackPanel>

                    <husk:Divider />

                    <StackPanel Spacing="8">
                        <TextBlock Text="Write a Review" FontWeight="Bold" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Your Rating:" VerticalAlignment="Center" />
                            <husk:RatingControl x:Name="ReviewRating" Value="0" FontSize="24" />
                        </StackPanel>
                        <TextBox Watermark="Share your thoughts about this product..."
                                 AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80" />
                        <Button Content="Submit Review" Classes="Primary" HorizontalAlignment="Right"
                                Click="OnSubmitReviewClick" />
                    </StackPanel>
                </StackPanel>
            </husk:Card>
        </controls:ExampleContainer>

    </StackPanel>
</controls:ControlPage>
