<controls:ControlPage xmlns="https://github.com/avaloniaui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
                      xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
                      mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                      x:Class="Huskui.Gallery.Views.HighlightBlocksPage">

    <StackPanel Spacing="32">

        <controls:ExampleContainer Title="Basic Highlight Blocks"
                                   Description="Inline text highlighting for emphasis">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    This is normal text with a
                    <husk:HighlightInline Text="highlighted word" />
                    in the middle of the sentence.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    You can also highlight
                    <husk:HighlightInline Text="multiple" />
                    <husk:HighlightInline Text="words" />
                    in the same paragraph.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Keyboard Shortcuts"
                                   Description="Using the Shortcut class for keyboard combinations">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    Press
                    <husk:HighlightInline Text="Ctrl+C" IsShortcut="True" />
                    to copy and
                    <husk:HighlightInline Text="Ctrl+V" IsShortcut="True" />
                    to paste.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Use
                    <husk:HighlightInline Text="Ctrl+Z" IsShortcut="True" />
                    to undo or
                    <husk:HighlightInline Text="Ctrl+Shift+Z" IsShortcut="True" />
                    to redo.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Save your work with
                    <husk:HighlightInline Text="Ctrl+S" IsShortcut="True" />
                    or open a file with
                    <husk:HighlightInline Text="Ctrl+O" IsShortcut="True" />.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Primary Style"
                                   Description="Highlighted blocks with accent colors">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    This is a
                    <husk:HighlightInline Text="primary highlight" IsPrimary="True" />
                    with accent colors.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Primary shortcuts:
                    <husk:HighlightInline Text="Enter" IsShortcut="True" IsPrimary="True" />
                    to confirm or
                    <husk:HighlightInline Text="Esc" IsShortcut="True" IsPrimary="True" />
                    to cancel.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Code Snippets"
                                   Description="Highlighting code or commands in text">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    Run
                    <husk:HighlightInline Text="dotnet build" />
                    to compile your project.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Install packages with
                    <husk:HighlightInline Text="dotnet add package" />
                    followed by the package name.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Important: Always run
                    <husk:HighlightInline Text="git status" IsPrimary="True" />
                    before committing changes.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Mixed Usage"
                                   Description="Combining different styles in complex text">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    To deploy your application, first press
                    <husk:HighlightInline Text="Ctrl+Shift+B" IsShortcut="True" />
                    to build, then run
                    <husk:HighlightInline Text="dotnet publish" />
                    command, and finally use
                    <husk:HighlightInline Text="git push" IsPrimary="True" />
                    to deploy.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer Title="Documentation Example"
                                   Description="Real-world usage in documentation">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap" FontSize="16" FontWeight="Bold">
                    Getting Started with Huskui.Avalonia
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    1. Install the package:
                    <husk:HighlightInline Text="dotnet add package Huskui.Avalonia" />
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    2. Add the theme to your
                    <husk:HighlightInline Text="App.axaml" />
                    file.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    3. Use
                    <husk:HighlightInline Text="F5" IsShortcut="True" />
                    to run your application and see the changes.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Pro tip: Use
                    <husk:HighlightInline Text="Ctrl+Shift+F5" IsShortcut="True" IsPrimary="True" />
                    for a clean rebuild and run.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

    </StackPanel>
</controls:ControlPage>
