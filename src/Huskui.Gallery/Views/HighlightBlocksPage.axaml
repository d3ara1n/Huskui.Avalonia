<controls:ControlPage
    x:Class="Huskui.Gallery.Views.HighlightBlocksPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Spacing="32">

        <controls:ExampleContainer
            Title="Basic Highlight Blocks"
            Description="Inline text highlighting for emphasis">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    This is normal text with a
                    <husk:HighlightInline Text="highlighted word" />
                    in the middle of the sentence.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    You can also highlight
                    <husk:HighlightInline Text="multiple" />
                    <husk:HighlightInline Text="words" />
                    in the same paragraph.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Keyboard Shortcuts"
            Description="Using the Shortcut class for keyboard combinations">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    Press
                    <husk:HighlightInline
                        IsShortcut="True"
                        Text="Ctrl+C" />
                    to copy and
                    <husk:HighlightInline
                        IsShortcut="True"
                        Text="Ctrl+V" />
                    to paste.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Use
                    <husk:HighlightInline
                        IsShortcut="True"
                        Text="Ctrl+Z" />
                    to undo or
                    <husk:HighlightInline
                        IsShortcut="True"
                        Text="Ctrl+Shift+Z" />
                    to redo.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Save your work with
                    <husk:HighlightInline
                        IsShortcut="True"
                        Text="Ctrl+S" />
                    or open a file with
                    <husk:HighlightInline
                        IsShortcut="True"
                        Text="Ctrl+O" />
                    .
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Primary Style"
            Description="Highlighted blocks with accent colors">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    This is a
                    <husk:HighlightInline
                        IsPrimary="True"
                        Text="primary highlight" />
                    with accent colors.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Primary shortcuts:
                    <husk:HighlightInline
                        IsPrimary="True"
                        IsShortcut="True"
                        Text="Enter" />
                    to confirm or
                    <husk:HighlightInline
                        IsPrimary="True"
                        IsShortcut="True"
                        Text="Esc" />
                    to cancel.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Code Snippets"
            Description="Highlighting code or commands in text">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    Run
                    <husk:HighlightInline Text="dotnet build" />
                    to compile your project.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Install packages with
                    <husk:HighlightInline Text="dotnet add package" />
                    followed by the package name.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Important: Always run
                    <husk:HighlightInline
                        IsPrimary="True"
                        Text="git status" />
                    before committing changes.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Mixed Usage"
            Description="Combining different styles in complex text">
            <StackPanel Spacing="16">
                <TextBlock TextWrapping="Wrap">
                    To deploy your application, first press
                    <husk:HighlightInline
                        IsShortcut="True"
                        Text="Ctrl+Shift+B" />
                    to build, then run
                    <husk:HighlightInline Text="dotnet publish" />
                    command, and finally use
                    <husk:HighlightInline
                        IsPrimary="True"
                        Text="git push" />
                    to deploy.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Documentation Example"
            Description="Real-world usage in documentation">
            <StackPanel Spacing="16">
                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    TextWrapping="Wrap">
                    Getting Started with Huskui.Avalonia
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    1. Install the package:
                    <husk:HighlightInline Text="dotnet add package Huskui.Avalonia" />
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    2. Add the theme to your
                    <husk:HighlightInline Text="App.axaml" />
                    file.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    3. Use
                    <husk:HighlightInline
                        IsShortcut="True"
                        Text="F5" />
                    to run your application and see the changes.
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Pro tip: Use
                    <husk:HighlightInline
                        IsPrimary="True"
                        IsShortcut="True"
                        Text="Ctrl+Shift+F5" />
                    for a clean rebuild and run.
                </TextBlock>
            </StackPanel>
        </controls:ExampleContainer>

    </StackPanel>
</controls:ControlPage>
