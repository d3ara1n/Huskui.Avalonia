<UserControl
    x:Class="Huskui.Gallery.Views.HomePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel
            MaxWidth="800"
            Margin="48"
            Spacing="32">
            <!--  Welcome Section  -->
            <StackPanel Spacing="16">
                <TextBlock
                    Classes="WelcomeTitle"
                    Text="Welcome to Huskui Gallery" />
                <TextBlock
                    Classes="WelcomeSubtitle"
                    Text="Explore the comprehensive collection of Huskui.Avalonia controls and components"
                    TextWrapping="Wrap" />
            </StackPanel>

            <!--  Features Grid  -->
            <Grid
                ColumnDefinitions="*,*"
                ColumnSpacing="24"
                RowDefinitions="Auto,*"
                RowSpacing="24">
                <TextBlock
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,16"
                    FontSize="{StaticResource LargeFontSize}"
                    FontWeight="{StaticResource ControlStrongFontWeight}"
                    Text="Features" />

                <!--  Rich Components  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Classes="FeatureCard">
                    <StackPanel Spacing="16">
                        <fi:SymbolIcon
                            FontSize="32"
                            Foreground="{StaticResource ControlAccentForegroundBrush}"
                            Symbol="ControlButton" />
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="{StaticResource LargeFontSize}"
                                FontWeight="{StaticResource ControlStrongFontWeight}"
                                Text="Rich Component Library" />
                            <TextBlock
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Comprehensive set of UI components including buttons, cards, info bars, and more"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Theming Support  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Classes="FeatureCard">
                    <StackPanel Spacing="16">
                        <fi:SymbolIcon
                            FontSize="32"
                            Foreground="{StaticResource ControlAccentForegroundBrush}"
                            Symbol="ColorBackground" />
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="{StaticResource LargeFontSize}"
                                FontWeight="{StaticResource ControlStrongFontWeight}"
                                Text="Advanced Theming" />
                            <TextBlock
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Built-in support for light/dark themes with customizable accent colors and corner styles"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Quick Start  -->
            <StackPanel Spacing="24">
                <TextBlock
                    FontSize="{StaticResource LargeFontSize}"
                    FontWeight="{StaticResource ControlStrongFontWeight}"
                    Text="Quick Start" />

                <husk:Card Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontWeight="{StaticResource ControlStrongFontWeight}"
                            Text="Getting Started with Huskui.Avalonia" />

                        <TextBlock
                            Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                            Text="1. Install the NuGet package:" />

                        <Border
                            Padding="12"
                            Background="{StaticResource ControlTranslucentHalfBackgroundBrush}"
                            BorderBrush="{StaticResource ControlBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource SmallCornerRadius}">
                            <TextBlock
                                FontSize="{StaticResource SmallFontSize}"
                                Text="dotnet add package Huskui.Avalonia" />
                        </Border>

                        <TextBlock
                            Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                            Text="2. Add the theme to your App.axaml:" />

                        <Border
                            Padding="12"
                            Background="{StaticResource ControlTranslucentHalfBackgroundBrush}"
                            BorderBrush="{StaticResource ControlBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource SmallCornerRadius}">
                            <TextBlock FontSize="{StaticResource SmallFontSize}">
                                <Run Text="xmlns:husk=&quot;https://github.com/d3ara1n/Huskui.Avalonia&quot;" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="&lt;Application.Styles&gt;" />
                                <LineBreak />
                                <Run Text="    &lt;husk:HuskuiTheme Accent=&quot;Blue&quot; /&gt;" />
                                <LineBreak />
                                <Run Text="&lt;/Application.Styles&gt;" />
                            </TextBlock>
                        </Border>

                        <TextBlock
                            Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                            Text="3. Start using Huskui controls in your views!" />
                    </StackPanel>
                </husk:Card>
            </StackPanel>

            <!--  Navigation Help  -->
            <StackPanel Spacing="16">
                <TextBlock
                    FontSize="{StaticResource LargeFontSize}"
                    FontWeight="{StaticResource ControlStrongFontWeight}"
                    Text="Navigation" />

                <husk:InfoBar Header="Explore the Gallery">
                    <TextBlock TextWrapping="Wrap">
                        Use the sidebar to browse different categories of controls.
                        Each control page includes live examples, code snippets, and customization options.
                        Use the search box to quickly find specific controls.
                    </TextBlock>
                </husk:InfoBar>
            </StackPanel>

            <!--  Footer  -->
            <StackPanel Spacing="16">
                <husk:Divider />
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel
                        Grid.Column="0"
                        Spacing="4">
                        <TextBlock
                            FontWeight="{StaticResource ControlStrongFontWeight}"
                            Text="Huskui.Avalonia Gallery" />
                        <TextBlock
                            FontSize="{StaticResource SmallFontSize}"
                            Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                            Text="A modern UI component library for Avalonia" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="8">
                        <HyperlinkButton
                            NavigateUri="https://github.com/d3ara1n/Huskui.Avalonia"
                            Theme="{StaticResource GhostButtonTheme}"
                            ToolTip.Tip="GitHub Repository">
                            <fi:SymbolIcon
                                FontSize="{StaticResource MediumFontSize}"
                                Symbol="Open" />
                        </HyperlinkButton>
                        <HyperlinkButton
                            NavigateUri="https://docs.avaloniaui.net/"
                            Theme="{StaticResource GhostButtonTheme}"
                            ToolTip.Tip="Documentation">
                            <fi:SymbolIcon
                                FontSize="{StaticResource MediumFontSize}"
                                Symbol="Document" />
                        </HyperlinkButton>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl>
