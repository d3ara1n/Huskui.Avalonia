<controls:ControlPage
    x:Class="Huskui.Gallery.Views.ToggleSwitchesPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Huskui.Gallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Spacing="32">

        <controls:ExampleContainer
            Title="Basic Toggle Switches"
            Description="Standard toggle switches with different states">

            <StackPanel Spacing="16">
                <StackPanel Spacing="12">
                    <ToggleSwitch Content="Default Toggle" />
                    <ToggleSwitch
                        Content="Checked Toggle"
                        IsChecked="True" />
                    <ToggleSwitch
                        Content="Indeterminate Toggle"
                        IsChecked="{x:Null}"
                        IsThreeState="True" />
                </StackPanel>
            </StackPanel>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Settings Panel Example"
            Description="Real-world usage in settings panels">
            <husk:Card
                Width="400"
                Padding="24">
                <StackPanel Spacing="20">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Application Settings" />

                    <husk:Divider />

                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Content="Enable notifications"
                                IsChecked="True" />
                            <TextBlock
                                Margin="32,0,0,0"
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Receive push notifications for important updates" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Content="Auto-save documents"
                                IsChecked="True" />
                            <TextBlock
                                Margin="32,0,0,0"
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Automatically save changes every 5 minutes" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Content="Dark mode"
                                IsChecked="False" />
                            <TextBlock
                                Margin="32,0,0,0"
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Use dark theme for better viewing in low light" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Content="Analytics"
                                IsChecked="False" />
                            <TextBlock
                                Margin="32,0,0,0"
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="Help improve the app by sharing usage data" />
                        </StackPanel>
                    </StackPanel>

                    <husk:Divider />

                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="12">
                        <Button Content="Reset to Defaults" />
                        <Button
                            Classes="Primary"
                            Content="Save Settings" />
                    </StackPanel>
                </StackPanel>
            </husk:Card>
        </controls:ExampleContainer>

        <controls:ExampleContainer
            Title="Feature Toggles"
            Description="Feature flags and experimental options">
            <husk:Card
                Width="450"
                Padding="24">
                <StackPanel Spacing="20">
                    <StackPanel Spacing="8">
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Text="Experimental Features" />
                        <TextBlock
                            Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                            Text="Enable these features at your own risk. They may be unstable." />
                    </StackPanel>

                    <husk:Divider />

                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Classes="Primary"
                                Content="New UI Framework"
                                IsChecked="False" />
                            <TextBlock
                                Margin="32,0,0,0"
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="🧪 Experimental new user interface components" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Classes="Success"
                                Content="Advanced Search"
                                IsChecked="True" />
                            <TextBlock
                                Margin="32,0,0,0"
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="✨ Enhanced search with AI-powered suggestions" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Classes="Warning"
                                Content="Beta Performance Mode"
                                IsChecked="False" />
                            <TextBlock
                                Margin="32,0,0,0"
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="⚡ Experimental performance optimizations" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Classes="Danger"
                                Content="Debug Mode"
                                IsChecked="False" />
                            <TextBlock
                                Margin="32,0,0,0"
                                FontSize="12"
                                Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                Text="🐛 Show detailed error information and logs" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </husk:Card>
        </controls:ExampleContainer>

    </StackPanel>
</controls:ControlPage>
