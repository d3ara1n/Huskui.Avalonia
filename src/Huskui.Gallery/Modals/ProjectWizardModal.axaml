<husk:Modal
    x:Class="Huskui.Gallery.Modals.ProjectWizardModal"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <Grid
        MaxWidth="800"
        RowDefinitions="Auto,*,Auto">

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="24,16"
            CornerRadius="8,8,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="12">
                    <fi:SymbolIcon
                        FontSize="24"
                        Symbol="FolderAdd" />
                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="New Project Wizard" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Step 1 of 4: Project Type" />
                    </StackPanel>
                </StackPanel>

                <Button
                    Grid.Column="1"
                    Click="OnCloseClick">
                    <fi:SymbolIcon
                        HorizontalAlignment="Center"
                        FontSize="{StaticResource MediumFontSize}"
                        Symbol="Dismiss" />
                </Button>
            </Grid>
        </Border>

        <!--  Content  -->
        <ScrollViewer Grid.Row="1">
            <StackPanel
                Margin="24"
                Spacing="24">

                <!--  Progress Indicator  -->
                <husk:Card Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Setup Progress" />
                        <Grid
                            ColumnDefinitions="*,*,*,*"
                            ColumnSpacing="8">
                            <Border
                                Grid.Column="0"
                                Height="4"
                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                CornerRadius="2" />
                            <Border
                                Grid.Column="1"
                                Height="4"
                                Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                                CornerRadius="2" />
                            <Border
                                Grid.Column="2"
                                Height="4"
                                Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                                CornerRadius="2" />
                            <Border
                                Grid.Column="3"
                                Height="4"
                                Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                                CornerRadius="2" />
                        </Grid>
                        <Grid ColumnDefinitions="*,*,*,*">
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Type" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Template" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Configuration" />
                            <TextBlock
                                Grid.Column="3"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Review" />
                        </Grid>
                    </StackPanel>
                </husk:Card>

                <!--  Project Type Selection  -->
                <husk:Card Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Choose Project Type" />
                        <TextBlock
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Select the type of project you want to create" />

                        <Grid
                            ColumnDefinitions="*,*"
                            ColumnSpacing="16"
                            RowDefinitions="Auto,Auto,Auto"
                            RowSpacing="12">

                            <!--  Web Application  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Padding="16"
                                Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
                                BorderThickness="2"
                                CornerRadius="8">
                                <StackPanel Spacing="8">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <fi:SymbolIcon
                                            FontSize="20"
                                            Symbol="Globe" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="Web Application" />
                                    </StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Create a modern web application with React, Vue, or Angular"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  Desktop Application  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                Padding="16"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <StackPanel Spacing="8">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <fi:SymbolIcon
                                            FontSize="20"
                                            Symbol="Desktop" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="Desktop Application" />
                                    </StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Build cross-platform desktop apps with Avalonia or Electron"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  Mobile Application  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Padding="16"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <StackPanel Spacing="8">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <fi:SymbolIcon
                                            FontSize="20"
                                            Symbol="Phone" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="Mobile Application" />
                                    </StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Develop native mobile apps for iOS and Android"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  API Service  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Padding="16"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <StackPanel Spacing="8">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <fi:SymbolIcon
                                            FontSize="20"
                                            Symbol="Server" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="API Service" />
                                    </StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Create RESTful APIs and microservices"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  Library/Package  -->
                            <Border
                                Grid.Row="2"
                                Grid.Column="0"
                                Padding="16"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <StackPanel Spacing="8">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <fi:SymbolIcon
                                            FontSize="20"
                                            Symbol="Library" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="Library/Package" />
                                    </StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Build reusable libraries and npm packages"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  Documentation  -->
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                Padding="16"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <StackPanel Spacing="8">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <fi:SymbolIcon
                                            FontSize="20"
                                            Symbol="Document" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="Documentation" />
                                    </StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Generate documentation sites with Docusaurus or GitBook"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                        </Grid>
                    </StackPanel>
                </husk:Card>

                <!--  Additional Options  -->
                <husk:Card Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Additional Options" />

                        <StackPanel Spacing="12">
                            <CheckBox
                                Content="Include TypeScript support"
                                IsChecked="True" />
                            <CheckBox
                                Content="Set up testing framework"
                                IsChecked="True" />
                            <CheckBox Content="Configure CI/CD pipeline" />
                            <CheckBox Content="Add Docker configuration" />
                            <CheckBox
                                Content="Initialize Git repository"
                                IsChecked="True" />
                        </StackPanel>
                    </StackPanel>
                </husk:Card>

            </StackPanel>
        </ScrollViewer>

        <!--  Footer  -->
        <Border
            Grid.Row="2"
            Padding="24,16"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="0,0,8,8">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="12">
                <Button
                    Click="OnCancelClick"
                    Content="Cancel" />
                <Button
                    IsEnabled="False"
                    Content="Back" />
                <Button
                    Classes="Accent"
                    Click="OnNextClick"
                    Content="Next" />
            </StackPanel>
        </Border>

    </Grid>

</husk:Modal>
