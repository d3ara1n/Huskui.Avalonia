<husk:Modal
    x:Class="Huskui.Gallery.Modals.UserProfileModal"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid
        MaxWidth="600"
        RowDefinitions="Auto,*,Auto">

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="24,16"
            CornerRadius="8,8,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="12">
                    <fi:SymbolIcon
                        FontSize="24"
                        Symbol="Person" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Edit Profile" />
                </StackPanel>

                <Button
                    Grid.Column="1"
                    Click="OnCloseClick">
                    <fi:SymbolIcon
                        HorizontalAlignment="Center"
                        FontSize="{StaticResource MediumFontSize}"
                        Symbol="Dismiss" />
                </Button>
            </Grid>
        </Border>

        <!--  Content  -->
        <ScrollViewer Grid.Row="1">
            <StackPanel
                Margin="24"
                Spacing="24">

                <!--  Profile Picture  -->
                <husk:Card Padding="20">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Spacing="16">
                        <Border
                            Width="120"
                            Height="120"
                            Background="{DynamicResource AccentFillColorDefaultBrush}"
                            CornerRadius="60">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="48"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="SC" />
                        </Border>

                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="12">
                            <Button
                                Classes="Accent"
                                Content="Change Photo" />
                            <Button
                                Classes="Subtle"
                                Content="Remove" />
                        </StackPanel>
                    </StackPanel>
                </husk:Card>

                <!--  Personal Information  -->
                <husk:Card Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Personal Information" />

                        <Grid
                            ColumnDefinitions="*,*"
                            ColumnSpacing="16"
                            RowDefinitions="Auto,Auto,Auto,Auto"
                            RowSpacing="12">

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="First Name" />
                                <TextBox Text="Sarah" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="Last Name" />
                                <TextBox Text="Chen" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="Email Address" />
                                <TextBox Text="sarah.chen@techcorp.com" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="0"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="Phone Number" />
                                <TextBox Text="+1 (555) 123-4567" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="Location" />
                                <TextBox Text="San Francisco, CA" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="Bio" />
                                <TextBox
                                    Height="80"
                                    AcceptsReturn="True"
                                    Text="Senior Software Engineer passionate about creating beautiful and functional user interfaces. 8+ years of experience in full-stack development."
                                    TextWrapping="Wrap" />
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </husk:Card>

                <!--  Professional Information  -->
                <husk:Card Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Professional Information" />

                        <Grid
                            ColumnDefinitions="*,*"
                            ColumnSpacing="16"
                            RowDefinitions="Auto,Auto,Auto"
                            RowSpacing="12">

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="Job Title" />
                                <TextBox Text="Senior Software Engineer" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="Company" />
                                <TextBox Text="TechCorp Inc." />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="LinkedIn" />
                                <TextBox Text="linkedin.com/in/sarahchen" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="GitHub" />
                                <TextBox Text="github.com/sarahc-dev" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Spacing="4">
                                <TextBlock
                                    FontWeight="Medium"
                                    Text="Skills" />
                                <TextBox
                                    Height="60"
                                    AcceptsReturn="True"
                                    Text="React, TypeScript, Node.js, Python, AWS, Docker, Kubernetes"
                                    TextWrapping="Wrap" />
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </husk:Card>

                <!--  Privacy Settings  -->
                <husk:Card Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Privacy Settings" />

                        <StackPanel Spacing="12">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontWeight="Medium"
                                        Text="Public Profile" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Make your profile visible to other users" />
                                </StackPanel>
                                <ToggleSwitch
                                    Grid.Column="1"
                                    IsChecked="True" />
                            </Grid>

                            <husk:Divider />

                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontWeight="Medium"
                                        Text="Show Email" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Display email address on public profile" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1" />
                            </Grid>

                            <husk:Divider />

                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontWeight="Medium"
                                        Text="Activity Status" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="Show when you're online or active" />
                                </StackPanel>
                                <ToggleSwitch
                                    Grid.Column="1"
                                    IsChecked="True" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </husk:Card>

            </StackPanel>
        </ScrollViewer>

        <!--  Footer  -->
        <Border
            Grid.Row="2"
            Padding="24,16"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="0,0,8,8">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="12">
                <Button
                    Click="OnCancelClick"
                    Content="Cancel" />
                <Button
                    Classes="Accent"
                    Click="OnSaveClick"
                    Content="Save Profile" />
            </StackPanel>
        </Border>

    </Grid>

</husk:Modal>
